<!-- I added two string arrays so I can preset the two spinner I have created. The only difference
 between the two arrays is that one extra item is in the second array which is for all the
 categories -->
<resources>
    <string name="app_name">ToDoList</string>
    <string-array name="category_list">
        <item>Urgent</item>
        <item>Personal</item>
        <item>Work</item>
        <item>Secret</item>
    </string-array>
    <string-array name="filter_list">
        <item>All</item>
        <item>Urgent</item>
        <item>Personal</item>
        <item>Work</item>
        <item>Secret</item>
    </string-array>
</resources>
